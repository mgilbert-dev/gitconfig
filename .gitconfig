	name = Braulio Bhavamitra
	#name = Alan Freihof Tygel
	#email = alantygel@gmail.com

[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = brauliobo@gmail.com
	smtpserverport = 587

[core]
	pager = less -iRS

[alias]
	c = rebase --continue
	ci = commit --cleanup=default
	cam = commit --cleanup=default --amend
	cundo = reset HEAD^1
	cundoh = reset HEAD^1 --hard
	dall = reset --hard HEAD
	co = checkout

	unstage = reset HEAD

	s = show --color
	sno = show --color --name-only

	d = diff --color
	ds = diff --color --staged
	dsno = diff --color --staged --name-only
	dno = diff --color --name-only

	st = status

	lg = log --graph --pretty=format:'%Cred%h%Creset %s %Cgreen(%cr) %Cblue%an <%ae>%Creset' --abbrev-commit --date=relative
	filech = log -p --name-only
	lp = log -p

	pg = diff
	pgs = diff --staged
	pa = apply

	ash = stash
	ashy = stash apply

	chp = cherry-pick

	a = add
	ap = add -p

	amc = am --continue
	ama = am --abort

	rec = rebase --continue
	rea = rebase --abort

	mt = mergetool

	b = branch
	ba = branch -a

[apply]
	ignorewhitespace = change
	whitespace = nowarn

[color]
	interactive = true
	branch = true
	status = true

[pager]
	diff = true
	status = true
	show-branch = true
[mergetool "vimdiff3"]
	cmd = vim -u ~/.vimrc -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
